# Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# REQUIRED SETTINGS
# ===================

# MongoDB connection string (REQUIRED - server will not start without this)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vayureader

# JWT Secret Key (REQUIRED - server will not start without this)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# OTP SMS Gateway URL (REQUIRED for OTP functionality)
OTP_GATEWAY_URL=http://msg.com:8080/smsc/sends

# ===================
# OPTIONAL SETTINGS
# ===================

# Server port (default: 3000)
PORT=3000

# JWT token expiry in days (default: 1)
JWT_EXPIRY_DAYS=1

# OTP expiry in minutes (default: 5)
OTP_EXPIRY_MINUTES=5

# Environment mode (development, production)
NODE_ENV=development

# Skip actual SMS sending in development (set to true for testing)
SKIP_OTP_SEND=true

# CORS allowed origins (comma-separated list)
# Leave empty to allow all in development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=5
